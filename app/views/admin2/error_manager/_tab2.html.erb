                        </li>
                    </ul>
                </li>
            </ul>
        </div>

        <!--음역대 입-출력 Table-->
        <div class="card">
            <div class="card-header">
                <h2> <%= "100" %> <small>Issues</small></h2>
            </div>

            <table id="data-table-command" class="table table-striped table-vmiddle">
                <thead>
                    <tr>
                        <!-- <th data-column-id="id" data-type="numeric" data-order="desc">ID</th> -->
                        <th data-column-id="priority">Priority</th>
                        <th data-column-id="errornum">ErrorNum</th>
                        <th data-column-id="description">Description</th>
                        <th data-column-id="link">Link To Fix</th>
                        <!-- <th data-column-id="commands" data-formatter="commands" data-sortable="false">Commands</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% @errors.each do |e| %>
                        <tr>
                            <td>
                                <i class="zmdi zmdi-star<%= "-outline" if e.priority < 1 %>"></i>
                                <i class="zmdi zmdi-star<%= "-outline" if e.priority < 2 %>"></i>
                                <i class="zmdi zmdi-star<%= "-outline" if e.priority < 3 %>"></i>
                                <i class="zmdi zmdi-star<%= "-outline" if e.priority < 4 %>"></i>
                                <i class="zmdi zmdi-star<%= "-outline" if e.priority < 5 %>"></i>
                            </td>
                            <td><%= e.error_num %></td>
                            <td><%= e.memo %></td>
                            <td><a href="<%= e.link %>">Fix_it</a></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
