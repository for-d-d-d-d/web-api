<div class="container">
    <div class="block-header">
        <h2>Data Table</h2>

        <ul class="actions">
            <li>
                <a href="">
                    <i class="zmdi zmdi-trending-up"></i>
                </a>
            </li>
            <li>
                <a href="">
                    <i class="zmdi zmdi-check-all"></i>
                </a>
            </li>
            <li class="dropdown">
                <a href="" data-toggle="dropdown">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a href="">Refresh</a>
                    </li>
                    <li>
                        <a href="">Manage Widgets</a>
                    </li>
                    <li>
                        <a href="">Widgets Settings</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <!--음역대 입-출력 Table-->
    <div class="card">
        <div class="card-header">
            <h2> 팀 목록 <small>노래별 음역대를 입력하고 등록된 노래를 확인하는 테이블 입니다.(임시로 장르 "가요" 만 출력)</small></h2>
        </div>

        <table id="data-table-command" class="table table-striped table-vmiddle">
            <thead>
                <tr>
                    <th data-column-id="id" data-type="numeric" data-order="desc">ID</th>
                    <th data-column-id="sender">Name</th>
                    <th data-column-id="artist">Photo</th>
                    <th data-column-id="lowkey">artist_num</th>
                    <th data-column-id="highkey">Singers</th>
                    <th data-column-id="song_tjnum">Teams</th>
                    <th data-column-id="commands" data-formatter="commands" data-sortable="false">Commands</th>
                </tr>
            </thead>
            <tbody>
                <% @team.each do |t| %>
                <tr>
                    <td><%= t.id %></td>
                    <td><%= t.name %></td>
                    <td><img src="<%= t.photo %>" style="width:100px;"/></td>
                    <td><%= t.artist_num %></td>
                    <td>
                        <% if t.singers.empty? %>
                            이 팀에 소속된 Singer들이 없습니다.
                        <% else %>
                            <% t.singers.each do |ss| %>
                                <%= ss.name %> <br>
                            <% end %>
                        <% end %>
                    </td>
                    <td>
                        <% if t.teams.empty? %>
                            이 팀에 소속된 팀이 없습니다.
                        <% else %>
                            <% t.teams.each do |tt| %>
                                <%= tt.name %> <br>
                            <% end %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<!-- Data Table -->
<script type="text/javascript">
$(document).ready(function(){
    //Command Buttons
    var data_grid = $("#data-table-command").bootgrid({
        css: {
            icon: 'zmdi icon',
            iconColumns: 'zmdi-view-module',
            iconDown: 'zmdi-expand-more',
            iconRefresh: 'zmdi-refresh',
            iconUp: 'zmdi-expand-less'
        },
        formatters: {
            "commands": function(column, row) {
                return "<a href=\"/admin/songs_info?mod=" + row.id + "\" class=\"btn btn-icon command-edit waves-effect waves-circle\" data-row-id=\"" + row.id + "\"><span class=\"zmdi zmdi-edit\"></span></a> " +
                "<a href=\"/song/song_delete/" + row.id + "\" class=\"btn btn-icon command-delete waves-effect waves-circle\" data-row-id=\"" + row.id + "\"><span class=\"zmdi zmdi-delete\"></span></a>";
            }
        }
    }).on("loaded.rs.jquery.bootgrid", function(){
        /* Executes after data is loaded and rendered */
        data_grid.find(".command-edit").on("click", function(e){
            alert("수정하실 노래는 " + $(this).data("row-id") + "번 곡 입니다.");
        }).end().find(".command-delete").on("click", function(e){
            alert($(this).data("row-id") + " 번 곡을 정말 삭제하시겠습니까?");
        });
    });
});
</script>
