<!--a_row : 한 줄에 몇 개 보여주고 싶은가 ( 1,2,3,4,6,12 )-->
<% a_row = 4 %>
<% row = 12/a_row %>
<% c = 5 %>

<div class="col-md-2"></div>
<div class="col-md-8">
    <% 6.times do |num| %>
        <% if num == 0 %>
            <div class="row">
                <div class="col-md-6" style="padding:0% 6px;">
                    <%
                        if Team.where(id: @song[0].team_id).count == 0
                            team0 = Singer.find(@song[0].team_id)
                        else
                            team0 = Team.find(@song[0].team_id)
                        end
                    %>
                    <%= render 'home/song_card', :locals => {:img_path => @song[0].jacket, tag: 1, title: @song[0].title, singer: team0.name, number: @song[0].song_tjnum, id: @song[0].id} %>
                </div>
                <div class="col-md-6">
                    <% 2.times do |rr_num| %>
                        <%
                            if rr_num == 0
                                tagNum = 2
                                tagNum1 = 3
                            else
                                tagNum = 0
                                tagNum1 = 0
                            end
                            
                            if Team.where(id: @song[(rr_num+1)*2-1].team_id).count == 0
                                team1 = Singer.find(@song[(rr_num+1)*2-1].team_id)
                            else
                                team1 = Team.find(@song[(rr_num+1)*2-1].team_id)
                            end
                            
                            if Team.where(id: @song[(rr_num+1)*2].team_id).count == 0
                                team2 = Singer.find(@song[(rr_num+1)*2].team_id)
                            else
                                team2 = Team.find(@song[(rr_num+1)*2].team_id)
                            end
                        %>
                        <div class="row">
                            <div class="col-md-6" style="padding:0% 5px;">
                                <%= render 'home/song_card', :locals => {:img_path => @song[(rr_num+1)*2-1].jacket, tag: tagNum, title: @song[(rr_num+1)*2-1].title, singer: team1.name, number: @song[(rr_num+1)*2-1].song_tjnum, id: @song[(rr_num+1)*2-1].id} %>
                            </div>
                            <div class="col-md-6" style="padding:0% 5px;">
                                <%= render 'home/song_card', :locals => {:img_path => @song[(rr_num+1)*2].jacket, tag: tagNum1, title: @song[(rr_num+1)*2].title, singer: team2.name, number: @song[(rr_num+1)*2].song_tjnum, id: @song[(rr_num+1)*2].id} %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        <% else %>
            <div class="row">
                <% a_row.times do |r_num| %>
                    <div class="col-md-<%= row %> col-sm-<%= row %>" style="padding:0% 5px;">
                        <%
                            if Team.where(id: @song[c].team_id).count == 0
                                team = Singer.find(@song[c].team_id)
                            else
                                team = Team.find(@song[c].team_id)
                            end
                        %>
                        <%= render 'home/song_card', :locals => {:img_path => @song[c].jacket, tag: 0, title: @song[c].title, singer: team.name, number: @song[c].song_tjnum, id: @song[c].id} %>
                    </div>
                    <% c += 1 %>
                <% end %>
            </div>
        <% end %>
    <% end %>
</div>
<div class="col-md-2"></div>