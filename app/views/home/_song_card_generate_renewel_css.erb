    height: 214px;
    margin-top: -214px;
}
.cardLayer_gradient{
    background: linear-gradient(rgba(0, 0, 0, 0.05),rgba(0, 0, 0, 0.65));
    position: absolute;
}
.cardLayer_txt{
    height: 92px;
    margin-top: -92px;
    position: relative;
    
    padding: 10% 9% 0%;    /* 5등분 */
    
    color:#E3E3E3;
    font-family:나눔바른고딕;
    font-weight: 400;
}
.overflowCutter{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.cardLayer_txt > .overflowCutter > .artist{
    font-size: 19px;
    margin: 0;
}
.cardLayer_txt > .overflowCutter > .title{
    font-size: 27px;
}
.cardLayer_hoverRed{
    display:none;
    /*background: linear-gradient(rgba(255, 0, 0, 0.65),rgba(255, 0, 0, 0.5));*/    /* main page */
    background: linear-gradient(rgba(255, 0, 0, 0.8),rgba(0, 0, 0, 0.45));      /* search page */
    position:absolute;
}
.layerWrapper:hover > .cardLayer_hoverRed{
    display:block;
}
</style>
<% end %>